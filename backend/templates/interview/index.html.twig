{% extends '@EasyAdmin/page/content.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('calendar') }}
{#    {{ encore_entry_link_tags('chosen') }}#}
{% endblock %}

{% block content_title %}Interviews{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-3">
            <div class="mb-4">
                <button id="add-interview"  class="btn btn-primary w-100 pb-2 pt-2"><i class="fa-solid fa-plus"></i> Create New Event</button>

            </div>
            <div>
                <h5 class="mb-1">Upcoming Events</h5>
                <p class="text-muted">Don't miss scheduled events</p>
                <div>
                    <div class="card mb-3" bis_skin_checked="1">
                        <div class="card-body" bis_skin_checked="1">
                            <div class="d-flex mb-3" bis_skin_checked="1">
                                <div class="flex-grow-1" bis_skin_checked="1">
                                    <i class="mdi mdi-checkbox-blank-circle me-2 text-info"></i>
                                    <span class="fw-medium">30 Jan 2022 </span></div>
                                <div class="flex-shrink-0" bis_skin_checked="1">
                                    <small class="badge bg-primary-subtle text-primary ms-auto">1:00 AM to 12:00 AM</small>
                                </div>
                            </div>
                            <h6 class="card-title fs-16"> World Leprosy Day</h6>
                            <p class="text-muted text-truncate-two-lines mb-0"> </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-9">
            <div class="card">
                <div class="card-body">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="interviewModal" tabindex="-1" aria-labelledby="interviewModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="interviewModalLabel">New Interview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, {'attr': {'id': 'interviewForm'}}) }}
                    {{ form_widget(form) }}
                    <button type="submit" class="btn btn-primary">Save Interview</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <!-- Modal for Showing Interview Details -->
    <div class="modal fade" id="interviewDetailsModal" tabindex="-1" aria-labelledby="interviewDetailsModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="interviewDetailsModalLabel">Interview Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <input id="interview-id" type="hidden" value="">
                <div class="modal-body">
                    <div class="mb-3">
                        <strong>Location:</strong>
                        <span class="badge badge-info" id="interview-details-location"></span>
                    </div>
                    <div class="mb-3">
                        <strong>Candidate:</strong>
                        <span class="badge badge-primary" id="interview-details-candidate"></span>
                    </div>
                    <div class="mb-3">
                        <strong>Evaluators:</strong>
                        <span class="badge badge-secondary" id="interview-details-evaluators"></span>
                    </div>
                    <div class="mb-3">
                        <strong>Date:</strong>
                        <span class="badge badge-warning" id="interview-details-date"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="interview-delete" class="btn btn-danger"><i class="fa-solid fa-xmark"></i> Delete</button>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block body_javascript %}
    {{ parent() }}
{#    {{ encore_entry_script_tags('chosen') }}}#}
    {{ encore_entry_script_tags('calendar') }}
{% endblock %}
