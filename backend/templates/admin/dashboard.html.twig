{# templates/admin/dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %}Dashboard{% endblock %}

{# ... existing code ... #}

{% block page_content %}
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase">Scheduled Interviews</h6>
                            <h2 class="mb-0">{{ interviewStats.SCHEDULED }}</h2>
                        </div>
                        <i class="fas fa-calendar fa-3x text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase">Passed Interviews</h6>
                            <h2 class="mb-0">{{ interviewStats.IS_PASSED }}</h2>
                        </div>
                        <i class="fas fa-check-circle fa-3x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase">Failed Interviews</h6>
                            <h2 class="mb-0">{{ interviewStats.IS_FAILED }}</h2>
                        </div>
                        <i class="fas fa-times-circle fa-3x text-danger"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted text-uppercase">In Progress</h6>
                            <h2 class="mb-0">{{ interviewStats.IN_PROGRESS }}</h2>
                        </div>
                        <i class="fas fa-hourglass-half fa-3x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Interview Status Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="interviewChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Candidate Status Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="candidateChart"></canvas>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    {{ encore_entry_script_tags('chart') }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            createChart('interviewChart',
                [{{ interviewStats.SCHEDULED }}, {{ interviewStats.IS_FAILED }}, {{ interviewStats.IS_PASSED }}, {{ interviewStats.IN_PROGRESS }}],
                ['Scheduled', 'Failed', 'Passed', 'In Progress'],
                'Interview Status Distribution'
            );

            createChart('candidateChart',
                [{{ candidateStats.accepted }}, {{ candidateStats.failed }}, {{ candidateStats.inProgress }}],
                ['Accepted', 'Failed', 'In Progress'],
                'Candidate Status Distribution'
            );
        });
    </script>
{% endblock %}