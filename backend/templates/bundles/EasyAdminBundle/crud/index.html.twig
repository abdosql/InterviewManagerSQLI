{% extends ea.templatePath('layout') %}
{% trans_default_domain ea.i18n.translationDomain %}

{% block configured_stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}

{% block configured_javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                paging: true,
                searching: true,
                ordering: true
            });

            $('.action-delete').click(function(e) {
                e.preventDefault();
                const deleteUrl = $(this).attr('href');
                $('#modal-delete').modal('show').data('delete-url', deleteUrl);
            });

            $('#modal-delete-button').click(function(e) {
                e.preventDefault();
                const deleteUrl = $('#modal-delete').data('delete-url');
                $('#delete-form').attr('action', deleteUrl).submit();
            });
        });
    </script>
{% endblock %}

{% block content_title %}
    {%- apply spaceless -%}
        {{ entityLabel|trans }}
    {%- endapply -%}
{% endblock %}

{% block page_actions %}
    <div class="global-actions">
        <a href="{{ ea_url().setAction('new') }}" class="btn btn-primary">
            {{ 'action.new'|trans({'%entity_label_singular%': entityLabel}, 'EasyAdminBundle') }}
        </a>
    </div>
{% endblock %}

{% block main %}
    <table id="dataTable" class="table">
        <thead>
        <tr>
            {% for field in fields %}
                <th>{{ field.label }}</th>
            {% endfor %}
            <th>{{ 'Actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                {% for field in fields %}
                    <td>
                        {% if field.property == 'interviewDate' %}
                            {{ attribute(entity, field.property)|date("Y-m-d H:i:s") }}
                        {% elseif field.property == 'candidate' %}
                            <span class="badge badge-danger">{{ attribute(entity, field.property).firstName ~ ' ' ~ attribute(entity, field.property).lastName }}</span>
                        {% elseif field.property == 'evaluators' %}
                            {% set evaluators = [] %}
                            {% for evaluator in attribute(entity, field.property) %}
                                {% set evaluators = evaluators|merge([evaluator.firstName ~ ' ' ~ evaluator.lastName]) %}
                            {% endfor %}
                            <span class="badge badge-secondary">{{ evaluators|join(', ') }}</span>
                        {% else %}
                            {{ attribute(entity, field.property) }}
                        {% endif %}
                    </td>
                {% endfor %}
                <td>
                    {% for action in actions %}
                        {% if action.name == 'delete' %}
                            <a href="{{ ea_url().setAction('delete').setEntityId(entity.id) }}"
                               class="btn btn-sm {{ action.cssClass }} action-delete"
                               title="{{ action.label|trans }}">
                                {% if action.icon %}
                                    <i class="fa {{ action.icon }}"></i>
                                {% else %}
                                    {{ action.label|trans }}
                                {% endif %}
                            </a>
                        {% else %}
                            {% set actionUrl = ea_url().setAction(action.name).setEntityId(entity.id) %}
                            <a href="{{ actionUrl }}" class="btn btn-sm {{ action.cssClass }} {% if action.type == "batch" or action.type == "global" %}d-none{% endif %}" title="{{ action.label|trans }}">
                                {% if action.icon %}
                                    <i class="fa {{ action.icon }}"></i>
                                {% else %}
                                    {{ action.label|trans }}
                                {% endif %}
                            </a>
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="{{ fields|length + 1 }}">{{ 'No results found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ include('@EasyAdmin/crud/includes/_delete_form.html.twig', with_context = false) }}
{% endblock %}